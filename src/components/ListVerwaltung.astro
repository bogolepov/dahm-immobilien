	{
		catName: 'Vermietung und Mieterbetreuung',
		catDescriptions: [
			'Mietersuche und Abschluss von Mietverträgen',
			'Übergabe und Rücknahme von Mietflächen',
			'Bearbeitung von Mieteranliegen und Beschwerden',
			'Verwaltung von Mieterakten',
		],
	},
*/
---

<ul class='services-list'>
	{
		list.map(cat => {
			return (
				<li class='service-cat sticker color'>
					<p>{cat.catName}</p>
					<ul>
						{cat.catDescriptions.map(descr => {
							return <li>{descr}</li>;
						})}
					</ul>
				</li>
			);
		})
	}
	<li class='service-cat sticker color objects'>
		<a href='/objekte/'><Icon name='logo2025' class='image-h' /><span>Unsere Objekte</span></a>
	</li>
	<li></li>
	<li></li>
</ul>

<style>
	.services-list {
		--padding-x-service: 1.2em;
		--padding-y-service: 0.8em;
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		width: 100%;
		flex-wrap: wrap;
		column-gap: 2em;
	}
	.services-list > * {
		width: min(100%, 300px);
		flex-grow: 1;
	}
	.services-list .service-cat {
		margin-bottom: 2em;
	}

	.service-cat.sticker {
		--padding-x-sticker: var(--padding-x-service);
		--padding-y-sticker: var(--padding-y-service);
	}
	.service-cat.objects {
		display: grid;
		place-items: center;
		min-height: 120px;
	}

	.service-cat.objects a {
		display: flex;
		flex-direction: row;
		gap: 1.4em;
		align-items: center;
		height: 3.3em;
	}
	.service-cat.objects a span {
		width: min-content;
		font-size: 1.25em;
		font-weight: 500;
		color: var(--color-dahm-bordo);
	}
	@supports (font-variation-settings: 'wght' 460) {
		.service-cat.objects a span {
			font-weight: 460;
		}
	}

	.service-cat p {
		font-weight: 700;
		line-height: 1;
	}
	@supports (font-variation-settings: 'wght' 720) {
		.service-cat p {
			font-weight: 720;
		}
	}
	.service-cat ul {
		list-style: disc;
		margin-left: var(--padding-x-service);
	}
	.service-cat li {
		margin-top: var(--padding-y-service);
		line-height: 1.15;
	}
</style>
